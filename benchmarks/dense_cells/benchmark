#!/bin/sh

columns=$(tput cols)
lines=$(tput lines)

for mod in {0..1}; do
    for line in $(seq 1 $lines); do
        for col in $(seq 1 $columns); do
            if [ $(($col % 2)) -eq $mod ]; then
                printf "\e[38;2;255;0;255;48;2;0;255;0;1;3;4m$(($line % 10))"
            else
                printf "\e[38;2;0;255;0;48;2;255;0;255;21;23;24m$((9 - $line % 10))"
            fi
        done
    done
done
